@model IEnumerable<Proyecto_SW_II.Models.Compañia>

@{
    ViewData["Title"] = "SelectCompany";
}

<h1>Seleccionar una compañia para la pelicula</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    <a class="btn btn-outline-info" asp-action="Create" asp-route-id="@item.Id">Seleccionar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-outline-info" asp-action="Create">Atrás</a>