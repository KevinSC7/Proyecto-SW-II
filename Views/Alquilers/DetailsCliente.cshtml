@model Proyecto_SW_II.Models.Alquiler

@{
    ViewData["Title"] = "DetallesCliente";
}

<h1>Su pago:</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.cuenta.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.cuenta.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.pelicula.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.pelicula.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pago)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pago)
        </dd>
        <dt class="col-sm-2">
            @Html.Label("Dia de alquiler: ")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaComienzo)
        </dd>
        <dt class="col-sm-2">
            @Html.Label("La pelicula se podrá ver hasta:")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaFin)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-primary" style="padding: 4px;" asp-controller="Peliculas" asp-action="explorar">Regresar a la lista</a>
    <a class="btn btn-outline-primary" style="padding: 4px;" asp-controller="Peliculas" asp-action="??">Ir a MiLista</a>
</div>
