@model Proyecto_SW_II.Models.IntermedioCuentaUsuarioRol
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "MisDatos";
}

<h1>MisDatos</h1>

<form asp-controller="Home" asp-action="MisDatos">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="cuenta.Id" />
    <input type="hidden" asp-for="usuario.Id" />
    <input type="hidden" asp-for="cuenta.Nombre" />
    <input type="hidden" asp-for="cuenta.Contraseña" />
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="usuario.Nombre" class="control-label"></label>
                <input asp-for="usuario.Nombre" class="form-control" />
                <span asp-validation-for="usuario.Nombre" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="usuario.Apellido1" class="control-label">Primer apellido</label>
                <input asp-for="usuario.Apellido1" class="form-control" />
                <span asp-validation-for="usuario.Apellido1" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="usuario.Apellido2" class="control-label">Segundo apellido</label>
                <input asp-for="usuario.Apellido2" class="form-control" />
                <span asp-validation-for="usuario.Apellido2" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label asp-for="usuario.Direccion" class="control-label"></label>
                <input asp-for="usuario.Direccion" class="form-control" />
                <span asp-validation-for="usuario.Direccion" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="usuario.Dni" class="control-label">DNI/NIF</label>
                <input asp-for="usuario.Dni" class="form-control" />
                <span asp-validation-for="usuario.Dni" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="usuario.FechaNacimiento" class="control-label">Fecha de nacimiento</label>
                <input asp-for="usuario.FechaNacimiento" class="form-control" />
                <span asp-validation-for="usuario.FechaNacimiento" class="text-danger"></span>
                @if (ViewData["mensaje"] != null)
                {
                    <span class="text-danger">@ViewData["mensaje"]</span>
                }
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="usuario.Telefono" class="control-label"></label>
                <input asp-for="usuario.Telefono" class="form-control" />
                <span asp-validation-for="usuario.Telefono" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <p>(Vacio -> se deja como está)</p>
                <label class="control-label">Nueva contraseña</label>
                <input name="nuevapsw" class="form-control" />
                @if (ViewData["nuevapsw"] != null)
                {
                    <span class="text-danger">@ViewData["nuevapsw"].ToString()</span>
                }
            </div>
            <div class="form-group">
                <label class="control-label">Retype nueva contraseña</label>
                <input name="retypenuevapsw" class="form-control" />
                @if (ViewData["retypenuevapsw"] != null)
                {
                    <span class="text-danger">@ViewData["retypenuevapsw"].ToString()</span>
                }
            </div>
        </div>
    </div>
    <hr />
    <b>Para confirmar los cambios introduzca:</b><br />

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label"></label>
                <input type="password" name="psw" class="form-control" />
                @if (ViewData["psw"] != null)
                {
                    <span class="text-danger">@ViewData["psw"].ToString()</span>
                }
                
            </div>
            <div class="form-group">
                <label class="control-label">Retype</label>
                <input type="password" name="retype" class="form-control" />
                @if (ViewData["retype"] != null)
                {
                    <span class="text-danger">@ViewData["retype"].ToString()</span>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-outline-primary" />
                <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Index">Volver a inicio</a>
            </div>
        </div>
    </div>
</form>

