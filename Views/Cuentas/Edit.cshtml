@model Proyecto_SW_II.Models.Cuenta

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar la cuenta: @ViewData["nombre"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Nombre" />
            <div class="form-group">
                <label asp-for="Contraseña" class="control-label"></label>
                <input asp-for="Contraseña" class="form-control" />
                @if (ViewData["errorcontra"] != null)
                {
                    <span class="text-danger">@ViewData["errorcontra"].ToString()</span>
                }
            </div>
            <div class="form-group form-check">
                <label asp-for="_Estado" class="form-check-label" for="check1">
                    @if(ViewData["estado"] != null)
                    {
                        @if (ViewData["estado"].ToString() == "True")
                        {
                            <input type="checkbox" class="form-check-input" asp-for="_Estado" checked> 
                        }
                        else
                        {
                            <input type="checkbox" class="form-check-input" asp-for="_Estado" unchecked>
                        }
                    }
                    
                    Habilitar
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-primary" asp-action="Index">Regresar a la lista</a>
</div>

